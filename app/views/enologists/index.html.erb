<p id="notice"><%= notice %></p>

<h1>Enólogos</h1>

<table>
  <thead>
    <tr>
      <th>Nº</th>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Nacionalidad</th>
      <th>Revistae</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enologists.each do |enologist| %>
      <tr>
        <td><%= enologist.id %></td>
        <td><%= enologist.name %></td>
        <td><%= enologist.age %></td>
        <td><%= enologist.nationality %></td>
        <td><%= sort_magazines enologist.enologist_magazines %></td>
        <td><%= link_to 'Mostrar', enologist %></td>
        <td><%= link_to 'Editar', edit_enologist_path(enologist) %></td>
        <td><%= link_to 'Eliminar', enologist, method: :delete, data: { confirm: 'Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Enólogo', new_enologist_path %>
<%= link_to 'Vinos', root_path %>
<%= link_to "Revistas",  magazines_path %>
