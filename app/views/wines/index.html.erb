<p id="notice"><%= notice %></p>
<%= render 'layouts/login' %>

<h1>Vinos</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Cepas</th>
      <th>Puntaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.id %></td>
        <td><%= wine.name %></td>
        <td><%= sort_strains wine.wine_strains %></td>
        <td><%= sort_enologist wine.enologist_wines %></td>
        <td><%= link_to 'Mostrar', wine %></td>
        <td><%= link_to 'Puntaje', new_enologist_wine_path %>                    
        
        <% if current_user.admin?  %>
          <td><%= link_to 'Editar', edit_wine_path(wine) %></td>
          <td><%= link_to 'Eliminar', wine, method: :delete, data: { confirm: 'Está seguro?' } %></td>
        <% end %>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin?  %>
  <%= link_to 'Nuevo Vino', new_wine_path %>
  <%= link_to 'Enólogo', enologists_path %>
<% end %>
<%= link_to 'Cepas', strains_path %>


